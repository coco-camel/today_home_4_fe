{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "types": ["vite/client"],
    "lib": ["ES2021", "dom"]
  },
  "include": [
    "vite.config.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
